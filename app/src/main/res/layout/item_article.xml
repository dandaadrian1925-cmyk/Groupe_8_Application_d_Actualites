<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <!-- Image de l'article -->
    <ImageView
        android:id="@+id/ivThumbnails"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:contentDescription="Image de l'article"
        android:background="#EEEEEE"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <!-- Titre -->
    <TextView
        android:id="@+id/tvTitles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titre de l'article"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tvDescriptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description courte de l'article"
        android:textSize="14sp"
        android:textColor="#555555"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"/>

    <!-- Catégorie et date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCategorys"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Politique"
            android:textSize="12sp"
            android:textColor="#8B0000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01 Jan 2026"
            android:textSize="12sp"
            android:textColor="#888888"/>
    </LinearLayout>

    <!-- Icône favoris -->
    <ImageView
        android:id="@+id/ivFavorites"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:src="@android:drawable/btn_star_big_off"
        android:contentDescription="Favori"
        android:paddingTop="4dp"/>
</LinearLayout>