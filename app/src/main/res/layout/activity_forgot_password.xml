<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="10dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_lock_lock"
                app:tint="#8B0000"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <!-- Titre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe oublié"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrez votre adresse email pour recevoir un lien de réinitialisation."
            android:textColor="#808080"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:paddingBottom="20dp"/>

        <!-- Champ Email -->
        <EditText
            android:id="@+id/etEmailForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adresse email"
            android:inputType="textEmailAddress"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <!-- Bouton Envoyer -->
        <Button
            android:id="@+id/btnSendReset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Envoyer"
            android:textColor="#FFFFFF"
            android:backgroundTint="#8B0000"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <!-- Bouton Retour -->
        <TextView
            android:id="@+id/tvBackLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Retour à la connexion"
            android:textColor="#8B0000"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="10dp"/>

    </LinearLayout>
</ScrollView>