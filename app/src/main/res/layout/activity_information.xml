<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:gravity="center_horizontal">

        <!-- Titre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informations personnelles"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complétez vos informations pour finaliser l'inscription"
            android:textColor="#808080"
            android:textAlignment="center"/>

        <Space android:layout_height="30dp" android:layout_width="match_parent"/>

        <!-- Prénom -->
        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prénom"
            android:inputType="textPersonName"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp"/>

        <Space android:layout_height="15dp" android:layout_width="match_parent"/>

        <!-- Nom -->
        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom"
            android:inputType="textPersonName"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp"/>

        <Space android:layout_height="15dp" android:layout_width="match_parent"/>

        <!-- Date de naissance -->
        <EditText
            android:id="@+id/tvDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date de naissance (YYYY-MM-DD)"
            android:inputType="date"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp"/>

        <Space android:layout_height="20dp" android:layout_width="match_parent"/>

        <!-- Catégories favorites -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catégories favorites"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="10dp"/>

        <LinearLayout
            android:id="@+id/categoriesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp">

            <CheckBox android:id="@+id/cbPolitics" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Politique"/>
            <CheckBox android:id="@+id/cbEconomy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Économie"/>
            <CheckBox android:id="@+id/cbSports" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sports"/>
            <CheckBox android:id="@+id/cbTechnology" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Technologie"/>
            <CheckBox android:id="@+id/cbScience" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Science"/>
            <CheckBox android:id="@+id/cbHealth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Santé"/>
            <CheckBox android:id="@+id/cbEntertainment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Divertissement"/>
            <CheckBox android:id="@+id/cbTravel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Voyage"/>
            <CheckBox android:id="@+id/cbEnvironment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Environnement"/>
            <CheckBox android:id="@+id/cbEducation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Éducation"/>
            <CheckBox android:id="@+id/cbCulture" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Culture"/>
            <CheckBox android:id="@+id/cbFood" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cuisine"/>
            <CheckBox android:id="@+id/cbOther" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Autres"/>
            <CheckBox android:id="@+id/cbAll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Toutes"/>
        </LinearLayout>

        <Space android:layout_height="30dp" android:layout_width="match_parent"/>

        <!-- Bouton valider -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Valider"
            android:textColor="#FFFFFF"
            android:backgroundTint="#8B0000"/>

        <Space android:layout_height="20dp" android:layout_width="match_parent"/>

    </LinearLayout>
</ScrollView>