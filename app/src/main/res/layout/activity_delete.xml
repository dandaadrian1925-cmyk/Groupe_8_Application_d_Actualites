<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/headerDelete"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/bg_profile_header">

        <ImageView
            android:id="@+id/btnBackDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_previous"
            app:tint="@android:color/white"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supprimer mon compte"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- CONTENU -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerDelete"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Icône warning -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_dialog_alert"
                app:tint="#D32F2F"
                android:layout_marginBottom="16dp"/>

            <!-- Titre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attention !"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:gravity="center"/>

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La suppression de votre compte est définitive.\n\nToutes vos données seront supprimées et cette action est irréversible."
                android:textSize="15sp"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginTop="16dp"/>

            <!-- Mot de passe -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutDeletePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:boxBackgroundMode="outline"
                app:endIconMode="password_toggle"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editDeletePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirmer votre mot de passe"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Bouton supprimer -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Supprimer définitivement"
                android:textAllCaps="false"
                android:layout_marginTop="32dp"
                android:backgroundTint="#D32F2F"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"/>

            <!-- Bouton annuler -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Annuler"
                android:textAllCaps="false"
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="12dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
