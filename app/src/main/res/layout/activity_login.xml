<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:gravity="center_horizontal">

        <!-- Circle Avatar -->
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="10dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_lock_lock"
                app:tint="#8B0000"/>
        </LinearLayout>

        <Space android:layout_height="15dp"
            android:layout_width="match_parent"/>

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     N   E   W   S   "
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connectez-vous pour accéder à votre compte"
            android:textColor="#808080"
            android:textAlignment="center"/>

        <Space android:layout_height="30dp"
            android:layout_width="match_parent"/>

        <!-- Connexion / Inscription switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="12dp"
                android:text="Connexion"
                android:textColor="#8B0000"
                android:textStyle="bold"
                android:background="#FFEEEE"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="12dp"
                android:text="Inscription"
                android:textColor="#000000"/>
        </LinearLayout>

        <Space android:layout_height="30dp"
            android:layout_width="match_parent"/>

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adresse email"
            android:inputType="textEmailAddress"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp"/>

        <Space android:layout_height="20dp"
            android:layout_width="match_parent"/>

        <!-- Password -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp"/>

        <Space android:layout_height="25dp"
            android:layout_width="match_parent"/>

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Se connecter"
            android:textColor="#FFFFFF"
            android:backgroundTint="#8B0000"/>

        <Space android:layout_height="15dp"
            android:layout_width="match_parent"/>

        <!-- Register Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoToRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Créer un compte"
            android:textColor="#8B0000"
            android:backgroundTint="#FFFFFF"
            app:strokeWidth="2dp"
            app:strokeColor="#8B0000"/>

        <Space android:layout_height="20dp"
            android:layout_width="match_parent"/>

        <!-- Visitor Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F2F2"
            android:padding="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_view"
                app:tint="#8B0000"/>

            <Space android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mode visiteur : accès limité à une épreuve par matière."
                android:textColor="#808080"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>